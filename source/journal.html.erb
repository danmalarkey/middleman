<!--this is the journal page layout for the blog-->
---
pageable: true
per_page: 10
title: I am journal.
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>



<% page_articles[0...5].each do |article| %>
<div class="w-75 center-item">
  <article>
    <h1>
      <a href="<%= article.url %>"><%= article.title %></a>
    </h1>
    <p>
      <time><%= article.date.strftime('%b %e %Y') %></time>
    </p>

    <%= article.summary(250, '>>') %>

    <a href="<%= article.url %>">Read more</a>
  </article>
</div>
<% end %>


<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
