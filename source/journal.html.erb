---
pageable: true
per_page: 10

---
<!--this is the journal page layout for the blog-->
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>


<% page_articles[0...5].each do |article| %>
<div class="journal-entry" style="width: 75%; margin-left: auto; margin-right: auto; padding: 1rem 3rem;">
    <div class="center-item">
      <article class="journal-entry-intro">
        <h1 class="title">
          <a href="<%= article.url %>"><%= article.title %></a>
        </h1>

        <time class="timestamp"><%= article.date.strftime('%b %e %Y') %></time>
        <%= article.summary(300, '...') %>

        <a href="<%= article.url %>">Read more</a>
      </article>
    </div>
</div>
<% end %>


<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
